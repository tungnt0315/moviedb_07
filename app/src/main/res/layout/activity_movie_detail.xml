<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="viewModel"
            type="com.example.tung.moviedb_07.screen.movie_detail.MovieDetailViewModel"
            />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/image_backdrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ImageUrl="@{viewModel.backdropPath}"
            tools:ignore="ContentDescription"
            />

        <Button
            android:id="@+id/button_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_backdrop"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:onClick="@{viewModel::onButtonFavoriteClicked}"
            android:text="@{viewModel.favoriteText}"
            tools:ignore="RelativeOverlap"
            />

        <TextView
            android:id="@+id/text_tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/image_backdrop"
            android:gravity="center_horizontal"
            android:text="@{viewModel.tittle}"
            android:textColor="@color/color_tuatara"
            android:textSize="@dimen/sp_16"
            />

        <TextView
            android:id="@+id/text_genres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_tittle"
            android:text="@{viewModel.genres}"
            />

        <TextView
            android:id="@+id/text_release_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_genres"
            android:text="@{viewModel.releaseDate}"
            />

        <TextView
            android:id="@+id/text_production"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_release_date"
            android:text="@{viewModel.production}"
            />

        <TextView
            android:id="@+id/text_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_production"
            android:text="@{viewModel.overview}"
            />

    </RelativeLayout>

</layout>
