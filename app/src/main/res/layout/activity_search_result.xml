<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="viewModel"
            type="com.example.tung.moviedb_07.screen.search_result.SearchResultViewModel"
            />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/label_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginStart="@dimen/dp_4"
            android:paddingTop="@dimen/dp_4"
            android:text="@string/label_sort_by"
            app:Visibility="@{viewModel.sortAble}"
            style="@style/text_label"
            />

        <Spinner
            android:id="@+id/text_search"
            android:layout_alignTop="@+id/label_search"
            android:layout_toRightOf="@+id/label_search"
            android:layout_toEndOf="@+id/label_search"
            android:entries="@array/sort_by_entries"
            app:OnItemClickListener="@{viewModel.onItemClickListener}"
            app:Visibility="@{viewModel.sortAble}"
            style="@style/text_content"
            />

        <FrameLayout
            android:id="@+id/frame_search_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_search"
            />

    </RelativeLayout>

</layout>
