<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">false</item>
        <item name="android:paddingLeft">@dimen/dp_5</item>
        <item name="android:textColor">@color/colorTuatara</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginRight">@dimen/dp_4</item>
        <item name="android:layout_marginTop">@dimen/dp_4</item>
    </style>

    <style name="text_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">false</item>
        <item name="android:paddingRight">@dimen/dp_5</item>
    </style>

    <style name="hashtag">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
